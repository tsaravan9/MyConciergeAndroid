<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.admin.EnterPackageDetailsActivity">

    <TextView
        android:id="@+id/tv_announcement_title"
        android:layout_width="154dp"
        android:layout_height="22dp"
        android:layout_marginTop="172dp"
        android:text="Announcement Title"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_announcement_description"
        android:layout_width="365dp"
        android:layout_height="152dp"
        android:layout_marginTop="12dp"
        android:hint="Enter Announcement Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_announcement_description" />

    <EditText
        android:id="@+id/edit_announcement_title"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:hint="Enter Announcement Title:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_announcement_title" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/announcement" />

    <TextView
        android:id="@+id/tv_announcement_description"
        android:layout_width="159dp"
        android:layout_height="26dp"
        android:layout_marginTop="64dp"
        android:text="Title Description:"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_announcement_title" />

    <Button
        android:id="@+id/btn_post_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_announcement_description" />


</androidx.constraintlayout.widget.ConstraintLayout>